{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "linebreak-style": "off",
        "consistent-return": "off",
        "no-plusplus": "off",
        "curly": 1,
        "arrow-parens": "warn"
    }
}